<!doctype html>
<html>

<head>
    <title>{{ site.name }} &middot; {{ site.tagline }}</title>

    <meta name="description" content="{{ site.description }}">

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="/assets/css/crashpad.min.css" />
    {{> typekit }}

    {{> opengraph }}
    {{> twittercards }}
</head>

<body>

    <main class="main container" role="main">

        {{ body }}

    </main>

    <footer class="container footer">
        <div class="row">
            <p class="col-sm-12">
                {{#if site.twitter }}
                <a href="https://twitter.com/{{ site.twitter }}" title="Twitter">
                    <svg class="icon icon-twitter">
                        <use xlink:href="/assets/img/sprite.svg#twitter"></use>
                    </svg>
                </a>
                {{/if}}
                {{#if site.github }}
                <a href="https://github.com/{{ site.github }}" title="GitHub">
                    <svg class="icon icon-github">
                        <use xlink:href="/assets/img/sprite.svg#github"></use>
                    </svg>
                </a>
                {{/if}}
                {{#if site.dribbble }}
                <a href="https://dribbble.com/{{ site.dribbble }}" title="Dribbble">
                    <svg class="icon icon-dribbble">
                        <use xlink:href="/assets/img/sprite.svg#dribbble"></use>
                    </svg>
                </a>
                {{/if}}
            </p>
            <p class="col-sm-12">
                <small>&copy; 2015 Crashpad Collective</small>
            </p>
        </div>

    </footer>

    {{> googleanalytics }}

    <script src="/assets/js/jquery.min.js"></script>
    <script src="/assets/js/crashpad.min.js"></script>
    <script src="/assets/js/svg4everybody.min.js"></script>

</body>

</html>
